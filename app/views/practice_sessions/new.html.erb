<h1>New</h1>

<%= form_for @practice_session do |f| %>
  <div class="row">
    <div class="form-group col">
      <%= f.label :goal %>
      <%= f.text_area :goal, class: 'form-control' %>
    </div>

    <div class="form-group col">
      <%= f.label :result %>
      <%= f.text_area :result, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control datepicker' %>
  </div>

  <div class="form-group">
    <%= f.button 'Save', class: 'btn btn-secondary' %>
    <%= link_to 'Cancel', practice_sessions_path %>
  </div>
<% end %>
