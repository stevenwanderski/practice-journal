<header class="header">
  <h1>Edit Practice Session</h1>
</header>

<%= form_for @practice_session do |f| %>
  <div class="row form-group">
    <div class="col">
      <%= f.label :goal %>
      <%= f.text_area :goal, class: 'form-control' %>
    </div>

    <div class="col">
      <%= f.label :result %>
      <%= f.text_area :result, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date,
                      class: 'form-control datepicker',
                      value: date_month_day_year(@practice_session.date) %>
  </div>

  <div class="form-group">
    <%= f.button 'Save', class: 'button' %>
    <%= link_to 'Cancel', practice_sessions_path %>
  </div>
<% end %>
